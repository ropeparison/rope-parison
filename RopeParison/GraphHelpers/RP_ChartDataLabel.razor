<ChartDataLabel Visible="@Visible" Position="Syncfusion.Blazor.Charts.LabelPosition.Auto" Name="InformationText">
    <Template>
        @{
            var data = context as ChartDataPointInfo;
            var displayDataStr = data.Text;
            var displayData = PointData.GetPointData(displayDataStr);

            <div>
                @displayData.Name @displayData.Diameter
            </div>
        }
    </Template>
</ChartDataLabel>
@code {
    [Parameter]
    public bool Visible { get; set; }

    protected override async Task OnInitializedAsync()
    {
        //
    }
}
